{
  "name": "pablo-pro",
  "version": "1.0.0",
  "description": "Enhanced Pablo Preprocessor - Unified preprocessing for Marp presentations",
  "type": "module",
  "main": "src/index.js",
  "bin": {
    "pablo-pro": "src/cli.js"
  },
  "scripts": {
    "start": "node src/cli.js",
    "test": "jest --experimental-vm-modules",
    "dev": "node src/cli.js --serve --watch",
    "build": "node src/cli.js --build",
    "lint": "eslint src/",
    "format": "prettier --write src/"
  },
  "keywords": [
    "markdown",
    "preprocessor", 
    "marp",
    "presentation",
    "tables",
    "slides",
    "zappts"
  ],
  "author": "Pablo Presentation System",
  "license": "MIT",
  "dependencies": {
    "@marp-team/marp-cli": "^3.4.0",
    "chokidar": "^3.5.3"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "files": [
    "src/",
    "config/",
    "README.md"
  ]
}
